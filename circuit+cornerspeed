# Paste or type your script code here:
import fastf1
import numpy as np
from matplotlib import pyplot as plt
import powerbi.dataframe as pf

def rotate(xy, *, angle):
    rot_mat = np.array([[np.cos(angle), np.sin(angle)],
                        [-np.sin(angle), np.cos(angle)]])
    return np.matmul(xy, rot_mat)
def create_plot_window(car_data, car_data2, corner_distance, corner_margin, label1, label2, gp, corner_number):
    fig, ax = plt.subplots()
    ax.plot(car_data['Distance'], car_data['Speed'], color="green", label=label1)
    ax.plot(car_data2['Distance'], car_data2['Speed'], color="blue", label=label2)
    ax.set_xlim(corner_distance - corner_margin, corner_distance + corner_margin)
    ax.axvline(x=corner_distance, linestyle='dotted', color='grey')
    ax.text(corner_distance, car_data['Speed'].min() - 30, corner_number,
            va='center_baseline', ha='center', size='small')
    ax.set_xlabel('Afstand in meters')
    ax.set_ylabel('Snelheid in km/h')
    ax.legend()
    image_path = f'plot_{gp}_{corner_number}.png'
    plt.savefig(image_path)
    plt.close(fig)

    return image_path

params = pf.load()
jaar = params['jaar Value']
gp = params['gp Value']
sessie = "Race"
ronde = params['ronde Value']
coureur = params['coureur Value']
coureur2 = params['coureur2 Value']
corner_number = params['bocht Value']

session = fastf1.get_session(jaar, gp, sessie)
session.load(laps=True)

circuit_info = session.get_circuit_info()
lap = session.laps.pick_driver(coureur).pick_lap(ronde)
lap2 = session.laps.pick_driver(coureur2).pick_lap(ronde)
pos = lap.get_pos_data()
car_data = lap.get_car_data().add_distance()
car_data2 = lap2.get_car_data().add_distance()
corner_margin = 50

label1 = lap['Driver'].to_string(index=False), lap['Coureur'].to_string(index=False)
label2 = lap2['Driver'].to_string(index=False), lap2['Coureur'].to_string(index=False)
corner = circuit_info.corners[circuit_info.corners['Nummer'] == corner_number].iloc[0]
image_path = create_plot_window(car_data, car_data2, corner['Distance'], corner_margin, label1, label2, gp, str(corner_number))
image_path
